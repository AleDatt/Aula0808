@model IEnumerable<ExercicioProfMarcosGit.Models.Cliente>

@{
    ViewData["Title"] = "BuscarCliente";
    Layout = "~/Views/Shared/_NovoLayout.cshtml";
}

<h1>BuscarCliente</h1>

<p>
    <a asp-action="CadastroCliente">Novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                <a asp-action="CadastroCliente" asp-route-id="@item.Id">Alterar</a> |
                <a asp-action="DetalhesCliente" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="DeletarCliente" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
